<% provide(:title, 'Sign Up') %>
<div class="center hero-unit">
<h1>Sign Up</h1>
<div class="row">
<div class="span6 offset3">

	<%= form_for(@user) do |f| %>
		
		<%= render 'shared/error_messages' %>


		<%= f.label :name %>
		<%= f.text_field :name %>
		<br/>
		<%= f.label :email %>
		<%= f.text_field :email %>
		<br/>
		<%= f.submit "Create my account", class: "btn btn-large btn-primary" %>

	<% end %>
</div>
</div>
</div>
